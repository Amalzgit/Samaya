<style>
    /* Base styles */
    body {
        font-size: 16px;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .navbar-aside {
        position: fixed;
        top: 0;
        left: 0;
        width: 250px;
        height: 100%;
        overflow-y: auto;
        background-color: #f8f9fa; /* Background color for sidebar */
        transition: width 0.3s ease;
    }

    .main-wrap {
        margin-left: 250px;
        padding: 20px;
    }

    @media (max-width: 1200px) {
        .navbar-aside {
            width: 200px;
        }

        .main-wrap {
            margin-left: 200px;
        }
    }

    @media (max-width: 992px) {
        .navbar-aside {
            width: 150px;
        }

        .main-wrap {
            margin-left: 150px;
        }

        .navbar-aside .menu-aside {
            display: none;
        }

        .navbar-aside .btn-aside-minimize {
            display: block;
        }
    }

    @media (max-width: 768px) {
        .navbar-aside {
            display: none;
        }

        .main-wrap {
            margin-left: 0;
            padding: 20px;
        }

        .main-header {
            display: flex;
            flex-direction: column;
        }
    }

    /* Status colors */
    .status-pending {
        background-color: #fff3cd;
    }

    .status-processing {
        background-color: #cce5ff;
    }

    .status-shipped {
        background-color: #d4edda;
    }

    .status-delivered {
        background-color: #adf2bb;
    }

    .status-cancelled {
        background-color: #f8d7da;
    }

    .status-dropdown {
        width: 150px;
        transition: background-color 0.3s ease;
    }

    .status-dropdown:disabled {
        background-color: #f8f9fa;
    }
    .custom-dropdown-menu {
        /* Adjust the right position to make sure the dropdown menu is fully visible */
        right: 0; /* Adjust as needed to fit your layout */
        left: auto; /* Make sure left is not overriding right */
    }

    /* Optional: Add additional styling if needed */
    .dropdown-menu {
        max-width: 300px; /* Set a maximum width if needed */
        overflow: visible; /* Ensure the dropdown content is visible */
    }
</style>

