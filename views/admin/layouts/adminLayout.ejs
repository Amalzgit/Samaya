           <!-- Custom Styles -->
     <style>
         body {
             background-color: #f8f9fa;
             font-size: 16px;
             margin: 0;
             padding: 0;
             box-sizing: border-box;
         }
         .dashboard-card {
             border-radius: 15px;
             box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
             transition: transform 0.3s ease-in-out;
         }
         .dashboard-card:hover {
             transform: translateY(-5px);
         }
         
         .navbar-aside {
             position: fixed;
             top: 0;
             left: 0;
             width: 250px;
             height: 100%;
             overflow-y: auto;
             background-color: #f8f9fa;
             transition: width 0.3s ease;
         }
         .main-wrap {
             margin-left: 250px;
             padding: 20px;
         }
         @media (max-width: 1200px) {
             .navbar-aside {
                 width: 200px;
             }
             .main-wrap {
                 margin-left: 200px;
             }
         }
         @media (max-width: 992px) {
             .navbar-aside {
                 width: 150px;
             }
             .main-wrap {
                 margin-left: 150px;
             }
             .navbar-aside .menu-aside {
                 display: none;
             }
             .navbar-aside .btn-aside-minimize {
                 display: block;
             }
         }
         @media (max-width: 768px) {
             .navbar-aside {
                 display: none;
             }
             .main-wrap {
                 margin-left: 0;
                 padding: 20px;
             }
             .main-header {
                 display: flex;
                 flex-direction: column;
             }
         }
         /* Status colors */
         .status-pending {
             background-color: #fff3cd;
         }
         .status-processing {
             background-color: #cce5ff;
         }
         .status-shipped {
             background-color: #d4edda;
         }
         .status-delivered {
             background-color: #adf2bb;
         }
         .status-cancelled {
             background-color: #f8d7da;
         }
         .status-dropdown {
             width: 150px;
             transition: background-color 0.3s ease;
         }
         .status-dropdown:disabled {
             background-color: #f8f9fa;
         }
         .custom-dropdown-menu {
             right: 0;
             left: auto;
         }
         .dropdown-menu {
             max-width: 300px;
             overflow: visible;
         }
         
         .navb {
            display: flex;
            justify-content: flex-start; /* Align items to the left */
            padding: 10px;
            background-color: #f8f9fa; /* Background color for the navbar */
        }
        .navb a {
            display: flex;
            align-items: center;
            color: red; /* Change text color to red */
        }
        .navb i {
            margin-right: 8px; /* Space between the icon and the text */
            font-size: 1.5rem; /* Custom size for the icon */
            color: red; /* Change icon color to red */
        }
     </style>
  </head>

