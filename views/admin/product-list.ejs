<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products List</h2>
            <p>All Products.</p>
        </div>
        <div>
            <a href="#" class="btn btn-light rounded font-md">Export</a>
            <a href="#" class="btn btn-light rounded font-md">Import</a>
            <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col col-check flex-grow-0">
                    <div class="form-check ms-2">
                        <!-- Placeholder for checkboxes or other form elements -->
                    </div>
                </div>
                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                    <select id="categorySelect" class="form-select">
                        <option selected>Select category</option>
                        <% for (let category of categories) { %>
                        <option><%= category.name %></option>
                        <% } %>
                    </select>
                </div>
                <!-- Uncomment below to include status filter -->
                <!--
                <div class="col-md-2 col-6">
                    <select class="form-select">
                        <option selected>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>
                -->
            </div>
        </header> <!-- card-header end// -->

        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <h3>Products List</h3>
                </div>
            </div>
        
            <div class="row align-items-center mb-3">
                <div class="col col-check flex-grow-0">
                    <!-- Placeholder for checkboxes or other visual elements -->
                </div>
                <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name fw-bold">
                    <strong>Name</strong>
                </div>
                <div class="col-lg-2 col-sm-2 col-4 col-price fw-bold">
                    <strong>Price</strong>
                </div>
                <div class="col-lg-2 col-sm-2 col-4 col-price fw-bold">
                    <strong>Description</strong>
                </div>
                <div class="col-lg-1 col-sm-1 col-2 col-stock fw-bold">
                    <strong>Stock</strong>
                </div>
                <div class="col-lg-2 col-sm-2 col-4 col-action text-end fw-bold">
                    <strong>Actions</strong>
                </div>
            </div>
        
            <% for (let product of products) { %>
            <article class="itemlist mb-3">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">
                        <!-- Placeholder for checkboxes or other visual elements -->
                    </div>
                    <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                        <a class="itemside" href="#">
                            <div class="left">
                                <img src="/products/<%= product.images[0] %>" class="img-sm img-thumbnail" alt="Item">
                            </div>
                            <div class="info">
                                <h6 class="mb-0"><%= product.name %></h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-price">
                        <span><%= product.price %></span>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-description">
                        <span><%= product.description %></span>
                    </div>
                    <div class="col-lg-1 col-sm-1 col-2 col-stock">
                        <span><%= product.stock %></span>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                        <% if (product.deleted) { %>
                        <a href="/admin/restore-product/<%= product._id %>" class="btn btn-sm font-sm btn-light rounded">
                            <i class="material-icons md-delete_forever"></i> Restore
                        </a>
                        <% } else { %>
                        <a href="/admin/product-edit/<%= product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                            <i class="material-icons md-edit"></i> Edit
                        </a>
                        <a href="/admin/delete-product/<%= product._id %>" class="btn btn-sm font-sm btn-light rounded">
                            <i class="material-icons md-delete_forever"></i> Delete
                        </a>
                        <% } %>
                    </div>
                </div> <!-- row .// -->
            </article> <!-- itemlist  .// -->
            <% } %>
        </div>
         <!-- card-body end// -->
    </div> <!-- card end// -->

    <!-- Pagination section (if needed) -->
