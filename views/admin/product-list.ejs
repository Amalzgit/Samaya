<section class="content-main">
    <div class="content-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="content-title card-title">Products List</h2>
            <p>All Products.</p>
        </div>
        <div>
            <a href="#" class="btn btn-light rounded font-md me-2">Export</a>
            <a href="#" class="btn btn-light rounded font-md me-2">Import</a>
            <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>

    <div class="card mb-4">
        <header class="card-header d-flex align-items-center justify-content-between">
            <div class="col-md-3 col-12">
                <select id="categorySelect" class="form-select">
                    <option selected>Select category</option>
                    <% for (let category of categories) { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                    <% } %>
                </select>
            </div>
        </header>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <h3>Products List</h3>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let product of products) { %>
                        <tr>
                            <td class="text-center">
                                <img src="/products/<%= product.images[0] %>" class="img-sm img-thumbnail" alt="Item">
                            </td>
                            <td><%= product.name %></td>
                            <td><%= product.price %></td>
                            <td>
                                <div class="description-container">
                                    <%= product.description %>
                                </div>
                            </td>
                            <td><%= product.stock %></td>
                            <td class="text-end">
                                <% if (product.deleted) { %>
                                <a href="/admin/restore-product/<%= product._id %>" class="btn btn-sm btn-light rounded me-1">
                                    <i class="fa-solid fa-unlock"></i>
                                </a>
                                <% } else { %>
                                <a href="/admin/product-edit/<%= product._id %>" class="btn btn-sm btn-brand rounded me-1">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/admin/delete-product/<%= product._id %>" class="btn btn-sm btn-light rounded me-1">
                                    <i class="fa-solid fa-lock"></i>
                                </a>
                                <% } %>
                                <a href="/admin/remove-product/<%= product._id %>" class="btn btn-sm btn-light rounded delete-btn">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<style>
    .description-container {
        max-height: 100px;
        overflow-y: auto;
        border: 1px solid #ddd;
        padding: 5px;
        border-radius: 5px;
    }
    .img-sm {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const categorySelect = document.getElementById('categorySelect');

        categorySelect.addEventListener('change', () => {
            const selectedCategoryId = categorySelect.value;
            if (selectedCategoryId) {
                window.location.href = `/admin/product-list?category=${selectedCategoryId}`;
            }
        });
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const deleteButtons = document.querySelectorAll('.delete-btn');

        deleteButtons.forEach(button => {
            button.addEventListener('click', (event) => {
                event.preventDefault(); // Prevent the default link behavior

                const confirmAction = confirm("Are you sure you want to remove this product?");
                if (confirmAction) {
                    window.location.href = button.href; // Redirect to the link if confirmed
                }
            });
        });
    });
</script>
