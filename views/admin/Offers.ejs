<section class="content-main">
    <div class="content-header">
        <div>
            <h1 class="content-title card-title">Ongoing Offers</h1>
            <hr>
            <p >Manage Offers</p>
        </div>
        <div>
            <a href="/admin/createOffer" class="btn btn-primary">Create Offer</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th>Product</th>
                            <th>Discount</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let offer of offers) { %>
                        <tr>
                            <td class="text-center"><%= offer._id %></td>
                            <td><%= offer.productId.name %></td>
                            <td><%= offer.discount %>%</td>
                            <td><%= new Date(offer.startDate).toLocaleDateString() %></td>
                            <td><%= new Date(offer.endDate).toLocaleDateString() %></td>
                            <td class="<%= offer.isActive ? 'text-success' : 'text-danger' %>">
                                <%= offer.isActive ? 'Active' : 'Inactive' %>
                            </td>
                            <td class="text-end">
                                <div class="dropdown">
                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm">
                                        <i class="material-icons md-more_horiz"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        <a class="dropdown-item" href="/admin/edit-offer/<%= offer._id %>">Edit</a>
                                        <% if (offer.isActive) { %>
                                        <a class="dropdown-item text-danger" href="#" onclick="deactivateOffer('<%= offer._id %>')">Deactivate</a>
                                        <% } else { %>
                                        <a class="dropdown-item text-success" href="#" onclick="activateOffer('<%= offer._id %>')">Activate</a>
                                        <% } %>
                                        <a class="dropdown-item text-danger" href="#" onclick="deleteOffer('<%= offer._id %>')">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div> 
    </div>
</section> 
<hr>


<script src="path/to/sweetalert2.all.min.js"></script>
<script>
    function deleteOffer(offerId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/delete-offer/${offerId}`;
            }
        });
    }

    function activateOffer(offerId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to activate this offer?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, activate it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/activate-offer/${offerId}`;
            }
        });
    }

    function deactivateOffer(offerId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to deactivate this offer?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, deactivate it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/deactivate-offer/${offerId}`;
            }
        });
    }
</script>