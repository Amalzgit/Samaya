<main class="main">
  <section class="home-slider position-relative">
    <div class="hero-slider-1 style-2 dot-style-1 dot-style-1-position-1">
      <div class="single-hero-slider single-animation-wrap">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-lg-6">
              <div class="slider-1-height-2 slider-animated-1">
                <div class="single-slider-img single-slider-img-1">
                  <img
                    class="animated img-fluid pr-100"
                    src="userassets/Page-hero/sm-hero.gif"
                    alt="Animated GIF"
                  />
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="hero-slider-content-2">
                <h3 class="animated fw-400 pl-50 custom-link-hero">
                  Time is Luxury
                </h3>
                <p class="animated pl-55">It's the moment for indulgence.</p>
                <a
                  class="animated d-block mx-auto pl-110 custom-link-style"
                  href="/shop"
                  >Discover Now ↠</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="slider-arrow hero-slider-1-arrow"></div>
  </section>

  <section class="banners mb-20 pt-50">
    <!-- Additional content can be added here -->
  </section>
  <section>
    <div class="brand-belt">
      <% for(let brand of brands) { %>
      <div class="brand-item">
        <a><img src="brands/<%= brand.logo %>" alt="<%= brand.name %>" /></a>
      </div>
      <% } %>
    </div>
  </section>

  <section class="product-tabs pt-80 pb-20 wow fadeIn animated">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="tab-content wow fadeIn animated" id="myTabContent">
            <div
              class="tab-pane fade show active"
              id="tab-one"
              role="tabpanel"
              aria-labelledby="tab-one"
            >
              <div class="row">
                <% for(let product of products) { %>

                <!-- <div class="container mt-5">
                                        <div class="card mx-auto" style="max-width: 18rem;">
                                            <img src="/products/<%= product.images[0] %>    " class="card-img-top" alt="Big Bang Original Steel Ceramic Watch">
                                            <div class="card-body text-center">
                                                <p class="text-muted text-uppercase small"><%=product.category.name%></p>
                                                <h5 class="card-title fw-bold"><%=product.name%></h5>
                                                <div class="d-flex justify-content-between align-items-center mt-3">
                                                    <p class="fw-semibold mb-0"><%=product.price%> *</p>
                                                    <button class="btn btn-link text-muted p-0">
                                                        <i class="bi bi-heart fs-5"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                 -->

                <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                  <div class="product-cart-wrap">
                    <div class="product-img-action-wrap">
                      <div class="product-img product-img-zoom">
                        <a href="/product/<%= product._id %>">
                          <img
                            class="default-img img-fluid"
                            src="/products/<%= product.images[0] %>"
                            alt=""
                          />
                          <img
                            class="hover-img img-fluid"
                            src="/products/<%= product.images[1] %>"
                            alt=""
                          />
                        </a>
                      </div>
                      <div class="product-action-1">
                        <a
                          aria-label="Add To Wishlist"
                          class="action-btn hover-up"
                          href="shop-wishlist.html"
                          ><i class="fi-rs-heart"></i
                        ></a>
                      </div>
                    </div>
                    <div class="product-content-wrap">
                      <div class="product-category">
                        <a href="/product/<%= product._id %>"
                          ><%= product.category.name %></a
                        >
                      </div>
                      <h2>
                        <a href="/product/<%= product._id %>"
                          ><%= product.name %></a
                        >
                      </h2>
                      <div class="rating-result" title="90%">
                        <span>
                          <span>90%</span>
                        </span>
                      </div>
                      <div class="product-price">
                        <span>Price :<%= product.formattedPrice %></span>
                      </div>
                      <div class="product-action-1 show">
                        
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
  .brand-belt {
    display: flex;
    overflow-x: hidden; /* Allow horizontal scrolling */
    -webkit-scrollbar {
      display: none;
    }
    white-space: nowrap;
    padding: 10px;
    background-color: white; /* Black background for the brand belt */
    border-radius: 10px;
    justify-content: center; /* Align items to the start */
    gap: 20px; /* Add a gap between items */
  }

  .brand-item {
    flex: 0 0 auto; /* Prevent items from growing or shrinking */
    text-align: center;
    color: #ffffff; /* Ensure text is visible on the dark background */
  }

  .brand-item img {
    width: 200px; /* Fixed width for all images */
    height: 100px; /* Fixed height for all images */
    object-fit: cover; /* Ensure images are uniformly sized */
    display: block;
    margin: 0 auto 10px;
    border-radius: 5px; /* Rounded corners for a modern look */
  }

  .brand-item p {
    margin: 0 0 5px;
    font-size: 14px; /* Slightly smaller text for elegance */
  }

  .brand-item a:hover {
    text-decoration: underline;
  }
</style>
